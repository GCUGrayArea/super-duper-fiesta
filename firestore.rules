rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Canvas documents - allow read/write for authenticated users
    match /canvases/{canvasId} {
      allow read, write: if request.auth != null;
    }
    
    // User documents - users can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Anonymous canvas claiming - allow read/write for authenticated users
    match /pendingCanvases/{docId} {
      allow read, write: if request.auth != null;
    }
  }
}
